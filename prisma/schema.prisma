generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id String @id @default(uuid())

  login    String
  fullName String
  email    String
  pass     String
  isAdmin  Boolean
  jwt      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id Int @id @default(autoincrement())

  name         String
  cardImageUrl String
  images       String
  price        Int
  description  String
  flowersType Int
  count Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id Int @id @default(autoincrement())

  title String
  text String
  annotation String
  imagesUrl String
  mainImageUrl String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
