generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id String @id @default(uuid())

  fullName String
  email    String
  pass     String
  isAdmin  Boolean
  jwt      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model product {
  id Int @id @default(autoincrement())

  name         String
  cardImageUrl String
  images       String
  price        Int
  description  String

  //  Types:
  //  Dried: 0;
  //  Fresh: 1;
  //  Live: 2;
  //  Vases: 3;
  //  Candles: 4;
  //  Refreshers: 5;
  flowersType Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
